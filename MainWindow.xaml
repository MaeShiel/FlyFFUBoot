<Window x:Class="FlyFFBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="FlyFF U Bot"
        Height="800" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackground}"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="1400">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonPressedBackground}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ToggleButton Style for Theme Switch -->
        <Style x:Key="ThemeToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource ToggleBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ToggleHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}" 
                                    BlurRadius="10" 
                                    ShadowDepth="2" 
                                    Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" MinWidth="800"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*" MinWidth="320"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Browser -->
        <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid>
                    <wv2:WebView2 x:Name="BrowserView"
                                 Source="https://universe.flyff.com"/>
                    
                    <!-- Loading Overlay -->
                    <Border x:Name="BrowserLoadingOverlay"
                           Background="{DynamicResource CardBackground}"
                           Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center">
                            <TextBlock Text="âŸ³" 
                                      FontSize="48" 
                                      Foreground="{DynamicResource AccentBlue}"
                                      HorizontalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotation"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock Text="Initializing Browser..." 
                                      FontSize="14" 
                                      Foreground="{DynamicResource TextSecondary}"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" 
                     Width="10" 
                     HorizontalAlignment="Stretch" 
                     Background="Transparent"
                     ShowsPreview="True"/>

        <!-- Right Panel: Controls and Log -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="FlyFF U Bot" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="{DynamicResource TextPrimary}"/>
                    <TextBlock Text="Control Panel" 
                              FontSize="12" 
                              Foreground="{DynamicResource TextSecondary}"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Theme Toggle -->
                <ToggleButton x:Name="ThemeToggle" 
                             Grid.Column="1"
                             Style="{StaticResource ThemeToggleButton}"
                             Click="ThemeToggle_Click"
                             ToolTip="Toggle Theme">
                    <TextBlock x:Name="ThemeIcon" Text="ðŸŒ™" FontSize="20"/>
                </ToggleButton>
            </Grid>

            <!-- Control Panel -->
            <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Bot Controls" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource TextPrimary}"
                              Margin="0,0,0,15"/>
                    
                    <WrapPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Button Content="Start Bot" 
                               Style="{StaticResource ModernButton}"
                               Background="{DynamicResource AccentGreen}"
                               BorderBrush="{DynamicResource AccentGreenBorder}"
                               Click="StartBot_Click"
                               Margin="0,0,10,10"/>
                        
                        <Button Content="Stop Bot" 
                               Style="{StaticResource ModernButton}"
                               Background="{DynamicResource AccentRed}"
                               BorderBrush="{DynamicResource AccentRedBorder}"
                               Click="StopBot_Click"
                               Margin="0,0,10,10"/>
                        
                        <Button x:Name="SettingsButton"
                               Content="Settings" 
                               Style="{StaticResource ModernButton}"
                               Background="{DynamicResource AccentBlue}"
                               BorderBrush="{DynamicResource AccentBlueBorder}"
                               Click="SettingsButton_Click"
                               Margin="0,0,10,10"/>
                        
                        <Button x:Name="AdminButton"
                               Content="Admin" 
                               Style="{StaticResource ModernButton}"
                               Background="#9F7AEA"
                               BorderBrush="#805AD5"
                               Click="AdminButton_Click"
                               Margin="0,0,10,10"/>
                    </WrapPanel>

                    <!-- Character Stats -->
                    <TextBlock Text="Character Stats" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource TextPrimary}"
                              Margin="0,0,0,10"/>
                    
                    <!-- HP Bar -->
                    <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                  Text="HP" 
                                  FontSize="12" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,5"/>
                        
                        <Border Grid.Row="1"
                               x:Name="HPBarContainer"
                               Height="30"
                               Background="{DynamicResource LogBackground}"
                               BorderBrush="{DynamicResource CardBorder}"
                               BorderThickness="1"
                               CornerRadius="4">
                            <Grid x:Name="HPBarGrid">
                                <!-- HP Fill -->
                                <Border x:Name="HPBar"
                                       Background="#48BB78"
                                       CornerRadius="4"
                                       Width="0"
                                       HorizontalAlignment="Left"/>
                                
                                <!-- HP Text Overlay -->
                                <TextBlock x:Name="HPText"
                                          Text="0%"
                                          FontSize="13"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- HP Threshold Slider -->
                    <Grid Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                  Text="HP Threshold" 
                                  FontSize="12" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,5"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider x:Name="HPThresholdSlider"
                                   Grid.Column="0"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="50"
                                   TickFrequency="10"
                                   IsSnapToTickEnabled="True"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                            
                            <TextBlock Grid.Column="1"
                                      Text="{Binding ElementName=HPThresholdSlider, Path=Value, StringFormat={}{0:0}%}"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimary}"
                                      VerticalAlignment="Center"
                                      MinWidth="40"/>
                        </Grid>
                    </Grid>

                    <!-- Buffer HP Bar -->
                    <TextBlock Text="Buffer Stats" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource TextPrimary}"
                              Margin="0,20,0,10"/>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                  Text="Buffer HP" 
                                  FontSize="12" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,5"/>
                        
                        <Border Grid.Row="1"
                               x:Name="BufferHPBarContainer"
                               Height="30"
                               Background="{DynamicResource LogBackground}"
                               BorderBrush="{DynamicResource CardBorder}"
                               BorderThickness="1"
                               CornerRadius="4">
                            <Grid x:Name="BufferHPBarGrid">
                                <!-- Buffer HP Fill -->
                                <Border x:Name="BufferHPBar"
                                       Background="#48BB78"
                                       CornerRadius="4"
                                       Width="0"
                                       HorizontalAlignment="Left"/>
                                
                                <!-- Buffer HP Text Overlay -->
                                <TextBlock x:Name="BufferHPText"
                                          Text="0%"
                                          FontSize="13"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Buffer HP Threshold Slider -->
                    <Grid Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                  Text="Buffer HP Threshold" 
                                  FontSize="12" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,5"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider x:Name="BufferHPThresholdSlider"
                                   Grid.Column="0"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="50"
                                   TickFrequency="10"
                                   IsSnapToTickEnabled="True"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                            
                            <TextBlock Grid.Column="1"
                                      Text="{Binding ElementName=BufferHPThresholdSlider, Path=Value, StringFormat={}{0:0}%}"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimary}"
                                      VerticalAlignment="Center"
                                      MinWidth="40"/>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Activity Log -->
            <Border Grid.Row="2" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Log Header -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                              Text="Activity Log" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource TextPrimary}"/>
                    
                    <Button Grid.Column="1"
                           Content="Clear Log" 
                           Style="{StaticResource ModernButton}"
                           Padding="10,5"
                           Click="ClearLog_Click"
                           Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="1"
                           Content="Copy Log" 
                           Style="{StaticResource ModernButton}"
                           Background="{DynamicResource AccentBlue}"
                           BorderBrush="{DynamicResource AccentBlueBorder}"
                           Padding="10,5"
                           Click="CopyLog_Click"
                           Margin="80,0,0,0"/>
                </Grid>

                <!-- Log Content -->
                <Border Grid.Row="1" 
                       Background="{DynamicResource LogBackground}"
                       BorderBrush="{DynamicResource LogBorder}"
                       BorderThickness="1"
                       CornerRadius="6">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="ActivityLog"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource TextPrimary}"
                                FontFamily="Consolas"
                                FontSize="13"
                                Padding="10"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Text="[12:00:00] Bot initialized successfully&#x0a;[12:00:01] Connecting to game...&#x0a;[12:00:03] Connected to FlyFF Universe&#x0a;[12:00:05] Character selected: YourCharacter&#x0a;[12:00:07] Bot is ready&#x0a;[12:00:10] Waiting for start command..."/>
                    </ScrollViewer>
                </Border>

                <!-- Log Stats -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                              Text="Status: Ready" 
                              Foreground="{DynamicResource LogSuccess}"
                              FontWeight="SemiBold"
                              FontSize="12"/>
                    
                    <TextBlock Grid.Column="2"
                              Text="Total Logs: 6" 
                              Foreground="{DynamicResource TextSecondary}"
                              FontSize="12"/>
                </Grid>
            </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
