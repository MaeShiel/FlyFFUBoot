<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackground" Color="#1A202C"/>
    <SolidColorBrush x:Key="CardBackground" Color="#2D3748"/>
    <SolidColorBrush x:Key="CardBorder" Color="#4A5568"/>
    <SolidColorBrush x:Key="LogBackground" Color="#1A202C"/>
    <SolidColorBrush x:Key="LogBorder" Color="#4A5568"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#F7FAFC"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#A0AEC0"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#4A5568"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#F7FAFC"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#718096"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#718096"/>
    <SolidColorBrush x:Key="ButtonPressedBackground" Color="#A0AEC0"/>
    
    <!-- Toggle Colors -->
    <SolidColorBrush x:Key="ToggleBackground" Color="#4A5568"/>
    <SolidColorBrush x:Key="ToggleHoverBackground" Color="#718096"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentGreen" Color="#48BB78"/>
    <SolidColorBrush x:Key="AccentGreenBorder" Color="#38A169"/>
    <SolidColorBrush x:Key="AccentRed" Color="#F56565"/>
    <SolidColorBrush x:Key="AccentRedBorder" Color="#E53E3E"/>
    <SolidColorBrush x:Key="AccentBlue" Color="#4299E1"/>
    <SolidColorBrush x:Key="AccentBlueBorder" Color="#3182CE"/>
    
    <!-- Log Message Colors -->
    <SolidColorBrush x:Key="LogSuccess" Color="#68D391"/>
    <SolidColorBrush x:Key="LogInfo" Color="#63B3ED"/>
    <SolidColorBrush x:Key="LogWarning" Color="#F6AD55"/>
    <SolidColorBrush x:Key="LogError" Color="#FC8181"/>
    
    <!-- Shadow -->
    <Color x:Key="ShadowColor">#000000</Color>
    
</ResourceDictionary>
